# Functions

vercomp () {
        if [[ $1 == $2 ]]
        then
                echo "0"
                return 0
        fi
        local IFS=.
        local i ver1=($1) ver2=($2)
        # fill empty fields in ver1 with zeros
        for ((i=${#ver1[@]}; i<${#ver2[@]}; i++))
        do
                ver1[i]=0
        done
        for ((i=0; i<${#ver1[@]}; i++))
        do
                if [[ -z ${ver2[i]} ]]
                then
                        # fill empty fields in ver2 with zeros
                        ver2[i]=0
                fi
                if ((10#${ver1[i]} > 10#${ver2[i]}))
                then
                        echo "0"
                        return 0
                fi
                if ((10#${ver1[i]} < 10#${ver2[i]}))
                then
                        echo "1"
                        return 0
                fi
        done
        echo "Correct script version"
        echo "0"
        return 0
}


print_version () {

	current_time=`date`
	version=`git tag | tail -n 1`
	a=`git --version | cut -d " " -f 3`
	b=`vercomp $a 1.8.4.2`
	if [ "$b" -eq "1" ]
	then
		echo "git version:"
		echo "$a"

		echo "GoDMC2 version ${version}"
		echo "Current time: ${current_time}"

		echo "This git version is too early to handle proper version checking."
		echo "Please ensure that your scripts are up to date."
		echo "If in doubt, run 'git pull'"
		return 0
	fi

	commit=`git rev-parse HEAD`
	commit_date=`git show -s --format=%ci`
	echo ""
	echo ""
	echo "GoDMC2 version ${version}"
	echo "Commit: ${commit}"	
	echo "Commit date: ${commit_date}"
	echo "Current time: ${current_time}"
	echo ""
	echo "Please ensure your scripts are up to date."
	echo "If in doubt, run 'git pull'"
	echo ""
	echo ""

}

